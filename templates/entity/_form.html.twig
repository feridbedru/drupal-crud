{{ form_start(form) }}
<div class="row">
    <div class="form-group col-md-6">
        <label>{{ form_label(form.singular_name) }}</label>
        {{ form_widget(form.singular_name,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-6">
        <label>{{ form_label(form.plural_name) }}</label>
        {{ form_widget(form.plural_name,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
</div>
<div class="row">
    <div class="form-group col-md-7">
        <label>{{ form_label(form.description) }}</label>
        {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-3">
        <label>{{ form_label(form.namespace) }}</label>
        {{ form_widget(form.namespace,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-2">
        <label>{{ form_label(form.has_public_page) }}</label>
        {{ form_widget(form.has_public_page) }}
        <div class="help-block with-errors"></div>
    </div>
</div>
{% if not button_label is defined  %}
    <button class="btn btn-primary mr-3">{{ button_label|default('Save') }}</button>
    <button class="btn  btn-warning" type="reset">Reset</button>
{% else %}
    <input type="hidden" name="edit" value="{{ edit }}">
    <button class="btn btn-success mr-2">{{ button_label|default('Save') }}</button>
    <a href="{{ path('entity_index') }}" class="btn btn-primary">
        Cancel
    </a>
{% endif %}
{{ form_end(form) }}